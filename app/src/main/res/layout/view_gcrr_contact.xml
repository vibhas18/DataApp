<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10dp"
              android:background="@drawable/shp_white_click_border"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:src="@android:drawable/ic_delete"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/first_name_wrapper"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1">

            <EditText
                android:id="@+id/et_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:hint="First Name"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textCapWords"
                android:lines="2"
                android:nextFocusDown="@+id/submit"
                android:singleLine="true"
                android:textColorHint="#e7e7e7"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/last_name_wrapper"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1">

            <EditText
                android:id="@+id/et_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:hint="Last Name"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textCapWords"
                android:lines="2"
                android:nextFocusDown="@+id/submit"
                android:singleLine="true"
                android:textColorHint="#e7e7e7"/>

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_gcrr_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:text="GCRR Type*"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_gcrr_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shp_spinner_bg"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="Select City"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/phone_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:hint="Mobile Number"
            android:imeOptions="flagNoExtractUi"
            android:inputType="phone"
            android:maxLength="10"
            android:singleLine="true"
            android:textColorHint="#e7e7e7"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/email_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:hint="Authorized Email"
            android:imeOptions="flagNoExtractUi"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:textColorHint="#e7e7e7"/>

    </android.support.design.widget.TextInputLayout>

</LinearLayout>