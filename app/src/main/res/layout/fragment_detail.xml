<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.co.dineout.xoppin.dineoutcollection.fragment.steps.DetailFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_rest_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:text="Chain Name"
            android:textSize="12sp" />

        <Spinner
            android:id="@+id/spn_restaurant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shp_spinner_bg"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_hotel_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:text="Hotel/Mall"
            android:textSize="12sp" />

        <Spinner
            android:id="@+id/spn_hotel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shp_spinner_bg"
            android:gravity="center_vertical" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/restaurant_description_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/et_restaurant_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:hint="Description"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textCapWords"
                android:nextFocusDown="@+id/submit"
                android:textColorHint="#e7e7e7" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/restaurant_cft_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/et_cft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:hint="Cost for two *"
                android:imeOptions="flagNoExtractUi"
                android:inputType="numberDecimal"
                android:lines="2"
                android:nextFocusDown="@+id/submit"
                android:singleLine="true"
                android:textColorHint="#e7e7e7" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/tv_features_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:text="Features"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/ll_features"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

