                <CheckBox
                    android:id="@+id/cb_lunch_buffet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lunch Buffet" />

                <CheckBox
                    android:id="@+id/cb_dinner_buffet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dinner Buffet" />


            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</ScrollView>