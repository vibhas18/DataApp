                    android:layout_height="wrap_content"
                    android:text="Buffet" />

                <CheckBox
                    android:id="@+id/cb_roof"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Roof Top" />

                <CheckBox
                    android:id="@+id/cb_cafe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cafe" />

                <CheckBox
                    android:id="@+id/cb_kids"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kids Friendly" />

                <CheckBox
